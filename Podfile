use_frameworks!

source 'https://github.com/PopcornTimeTV/Specs.git'
source 'https://github.com/CocoaPods/Specs'

# Platform
platform :tvos, '9.0'

# Pods
def pods
  pod 'Alamofire'
  pod 'ObjectMapper'
  pod 'SWXMLHash'
end

# Targets
target 'PopcornKit' do
  pods
end

target 'PopcornKitTests' do
  pods
end
